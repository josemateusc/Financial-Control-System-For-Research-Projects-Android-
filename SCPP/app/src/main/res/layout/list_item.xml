<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="70dp"
    android:background="?attr/selectableItemBackground">
    <ImageView
        android:id="@+id/itemIcon" android:layout_width="50dp" android:layout_height="50dp"
        android:layout_marginStart="20dp" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_article_24" />

    <TextView
        android:id="@+id/itemProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/bree_serif"
        android:text="TextView"
        android:textColor="#004aad"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/itemInfo"
        app:layout_constraintStart_toEndOf="@+id/itemIcon"
        app:layout_constraintTop_toTopOf="@+id/itemIcon" />

    <TextView
        android:id="@+id/itemInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bree_serif"
        android:text="TextView"
        android:textColor="#004aad"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemIcon"
        app:layout_constraintStart_toStartOf="@+id/itemProject" />
    <ImageView
        android:id="@+id/itemArrow" android:layout_width="55dp" android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />
</androidx.constraintlayout.widget.ConstraintLayout>